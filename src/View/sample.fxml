<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="435" minWidth="635" style="-fx-background-color: #e8e8e8"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.Controller">
    <Label layoutX="20" layoutY="5" minWidth="100" text="Выбор поля для игры">
        <font>
        <Font size="14.0"/>
        </font>
    </Label>
    <Button layoutX="40" layoutY="50" minHeight="40" minWidth="80" onAction="#gameStart" text="3x3" fx:id="tri"/>
    <Button layoutX="40" layoutY="110" minHeight="40" minWidth="80" onAction="#gameStart" text="5x5" fx:id="pyat"/>
    <Button layoutX="40" layoutY="170" minHeight="40" minWidth="80" onAction="#gameStart" text="8x8" fx:id="vosem"/>
    <Button layoutX="40" layoutY="230" minHeight="40" minWidth="80" onAction="#clickOnExit" text="Выход"/>
    <GridPane fx:id="game_pole" layoutX="200" minHeight="150" minWidth="150"
              style="-fx-background-color: white; -fx-border-width: 2">
    </GridPane>
</AnchorPane>
